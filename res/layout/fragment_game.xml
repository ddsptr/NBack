<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="STOP"
            android:id="@+id/btnStop" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" android:layout_marginLeft="10dp"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="SOUND"
            android:id="@+id/button2" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="POSITION"
            android:id="@+id/btnPosition" android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp" android:layout_marginBottom="10dp"/>
    <GridLayout
            android:id="@+id/gameGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:columnCount="3" android:rowCount="3" android:clickable="false">
        <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button5" android:layout_row="0" android:layout_column="0"
                android:visibility="invisible"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button6" android:layout_row="0" android:layout_column="1"
                android:visibility="invisible"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button7" android:layout_row="0" android:layout_column="2"
                android:visibility="invisible"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button8" android:layout_row="1" android:layout_column="0"
                android:visibility="invisible"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button9" android:layout_row="1" android:layout_column="1"
                android:visibility="invisible"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button10" android:layout_row="1" android:layout_column="2"
                android:visibility="invisible"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button11" android:layout_row="2" android:layout_column="0" android:visibility="invisible"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button12" android:layout_row="2" android:layout_column="1"
                android:visibility="invisible"/>
        <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/button13" android:layout_row="2" android:layout_column="2"
                android:visibility="invisible"/>
    </GridLayout>
    <Button android:layout_width="120dp" android:layout_height="wrap_content" android:text="START"
            android:id="@+id/btnStart"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true" android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvResult"
            android:layout_below="@+id/btnStart"
            android:layout_toEndOf="@+id/btnStop"
            android:layout_toStartOf="@id/btnStart"
            android:gravity="center"
            />
</RelativeLayout>